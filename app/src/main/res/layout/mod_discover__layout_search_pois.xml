<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:alborgis="http://schemas.android.com/apk/lib/eu.randomobile.pnrlorraine.mod_imgmapping"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/blue_search"
    >

    <ScrollView
        android:id="@+id/scrollCategorias"
        android:layout_width="fill_parent"
        android:layout_height="800dp"

        android:layout_below="@+id/map_poisSearch"
        android:layout_above="@+id/ctn_botones"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    <LinearLayout
        android:id="@+id/ctn_categorias"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/blue_search"
        android:layout_marginLeft="20dp"
        android:orientation="vertical" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
			<CheckBox
                android:id="@+id/cb_1"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
           
            <TextView
                android:id="@+id/lb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/blue_categories"
                android:textSize="20dp"
                android:text="@string/lugar_de_interes_cultural" />
        </LinearLayout>

        <!-- Restaurantes -->

        <!-- Hebergement -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
			<CheckBox
                android:id="@+id/cb_2"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
           
            <TextView
                android:id="@+id/lb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="@color/blue_categories"
                android:text="@string/lugar_de_interes_natural" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cb_3"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="@color/blue_categories"
                android:text="@string/playas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cb_4"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="@color/blue_categories"
                android:text="@string/servicios_oficinas_de_turismo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cb_5"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lb_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="@color/blue_categories"
                android:text="@string/servicios_sanidad" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
 <!-- Fin categorias -->

    <eu.randomobile.pnrlorraine.mod_imgmapping.ImageMap
        android:id="@+id/map_poisSearch"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        alborgis:fitImageToScreen="false"
        alborgis:map="menu_busqueda"
        alborgis:maxSizeFactor="1.5"
        alborgis:scaleFromOriginal="true" />

    <!-- Busqueda por palabra clave -->

    <!-- Tabla para busquedas por duracion y distancia -->
    <!-- TextView to display result -->
    <!-- <TextView -->
    <!-- android:id="@+id/tvResult" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:paddingTop="20dp" -->
    <!-- android:paddingLeft="10dp" -->
    <!-- android:paddingRight="10dp" -->
    <!-- android:paddingStart="10dp" -->
    <!-- android:text="Result" /> -->

	<LinearLayout
        android:id="@+id/ctn_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btn_buscar"
            android:src="@drawable/btn_search"
            android:background="@color/transparent"/>
    </LinearLayout>

</RelativeLayout>